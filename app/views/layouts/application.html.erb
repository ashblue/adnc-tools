<!DOCTYPE html>
<html>
<head>
  <title>AdncTools</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value| %>
    <div class="alert-box <%= key %>" id="<%= key %>">
        <%= value %>
    </div>
<% end %>

<div class="container">
    <div class="page-header">
        <h1><a href="<%= root_path %>">ADNC Tools <small> Articy: Draft XML to JSON</small></a></h1>
    </div>

    <%= yield %>
</div>

</body>
</html>
