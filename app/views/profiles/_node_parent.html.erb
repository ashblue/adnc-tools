<div data-node="parent" class="panel panel-primary" id="<%= @parent.id %>">
    <div class="panel-heading">Parent <span class="status"></span></div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <%= form_for @parent, html: { :class => 'form-horizontal' } do |f| %>
                    <div class="form-group">
                        <%= f.label :xpath, :class => 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                            <%= f.text_field :xpath, :class => 'form-control' %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :key, 'Key', :class => 'col-sm-2 control-label' %>
                        <div class="col-sm-10">
                            <%= f.text_field :key, :class => 'form-control' %>
                        </div>
                    </div>
                <% end %>
            </div>

            <div class="col-md-6">
                <h4>Sample</h4>
                <pre class="sample"><%= @parent.xpath_sample %></pre>
            </div>
        </div>
    </div>
</div>