<%= form_for(@profile, html: { :class => 'form-inline' }) do |f| %>
    <% if @profile.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
                <% @profile.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :name, 'Type' %>
        <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :template %>
        <%= f.text_field :template, :class => 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :file_name_id %>
        <%= f.collection_select :file_name_id, FileName.all, :id, :name, {}, {:class => 'form-control'} %>
    </div>

    <div class="form-group">
        <%= f.label :notes %>
        <%= f.text_field :notes, :class => 'form-control' %>
    </div>

    <div class="action" style="margin-top: 5px;">
        <%= f.submit :class => 'btn btn-default btn-xs' %>
    </div>
<% end %>
